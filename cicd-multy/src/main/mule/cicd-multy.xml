http://www.mulesoft.org/schema/mule/secure-properties http://www.mulesoft.org/schema/mule/secure-properties/current/mule-secure-properties.xsd">
	
	<http:listener-config name="HTTP_Listener_config" doc:name="HTTP Listener config" doc:id="576a44ef-c201-49b0-ae99-d233d5fe3148" >
		<http:listener-connection host="${http.host}" port="${http.port}" />
	</http:listener-config>
	<configuration-properties doc:name="Configuration properties" doc:id="71d64030-927b-408c-8134-686f0012992d" file="configuration/local.properties" />
	<global-property doc:name="Global Property" doc:id="bdddeb66-0e0e-4d9f-b35c-7ba0d5942d77" name="env" value="local" />
	<db:config name="Database_Config" doc:name="Database Config" doc:id="61d02af6-84b4-4c75-bbbb-f50dea75d9d1" >
		<db:mssql-connection host="${db.host}" instanceName="${db.instanceName}" port="${db.port}" user="${db.user}" password="${secure::db.password}" databaseName="${db.databaseName}" />
	</db:config>
	<ftp:config name="FTP_Config" doc:name="FTP Config" doc:id="1385d579-9c5a-401a-bd70-7b52cd4b7b20" >
		<ftp:connection workingDir="${ftp.directory}" host="${ftp.host}" port="${ftp.port}" username="${ftp.username}" password="${secure::ftp.password}" />
	</ftp:config>
	<json-logger:config name="JSON_Logger_Config" doc:name="JSON Logger Config" doc:id="9b7f9f18-657d-4bee-b06f-77c3807da051" environment="${mule.env}" />
	<secure-properties:config name="Secure_Properties_Config" doc:name="Secure_Properties_Config" doc:id="f17c9e58-b078-4a56-850f-69166f01442c" file="configuration\local-secured.properties" key="Mayo7882*#*Redu2009*#*">
		<secure-properties:encrypt algorithm="Blowfish" />
	</secure-properties:config>
	<email:smtp-config name="Email_SMTP" doc:name="Email_SMTP" doc:id="5ae83798-38fc-405b-b06e-3b63f014f26f">
		<email:smtps-connection host="${email.host}" port="${email.port}" user="${email.user}" password="${secure::email.password}">
	
			<tls:context>
				<tls:trust-store insecure="true" />
			</tls:context>
		</email:smtps-connection>
	</email:smtp-config>
	<flow name="cicd-multy" doc:id="d0450e2f-d1a6-4eff-9948-e678d83c38c1" >
